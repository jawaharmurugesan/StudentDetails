@model StudentDetails.Models.UserData.UserData_Prop
@{
    ViewBag.Title = "Signup";
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script>
    function Numbervalidation(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                alert("Please Only Enter Number");
                return false;
            }

            return true;
        }
        catch (err) {
            alert(err.Description);
        }
    }
</script>


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



@using (Html.BeginForm("CreateAccount", "Signup", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title text-center">Register Here</div>

                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <form id="loginform" class="form-horizontal" role="form">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(a => a.Username, htmlAttributes: new { @class = "form-control", @placeholder = "User Name", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.Username)
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @*<input id="login-password" type="password" class="form-control" name="password" placeholder="password">*@
                            @Html.TextBoxFor(a => a.Password, htmlAttributes: new { @class = "form-control", @type = "password", @placeholder = "Password", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.Password)
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="Address" placeholder="Address">*@
                            @Html.TextBoxFor(a => a.Address, htmlAttributes: new { @class = "form-control", @placeholder = "Address", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.Address)
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="City" placeholder="City">*@
                            @Html.TextBoxFor(a => a.City, htmlAttributes: new { @class = "form-control", @placeholder = "City", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.City)
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="State" placeholder="State">*@
                            @Html.TextBoxFor(a => a.State, htmlAttributes: new { @class = "form-control", @placeholder = "State", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.State)
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="Country" placeholder="Country">*@
                            @Html.TextBoxFor(a => a.Country, htmlAttributes: new { @class = "form-control", @placeholder = "Country", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.Country)
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="Postalcode" placeholder="Pincode">*@
                            @Html.TextBoxFor(a => a.Postalcode, htmlAttributes: new { @class = "form-control", @placeholder = "Pincode", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.Postalcode)
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="Mobileno" placeholder="Mobile Number">*@
                            @Html.TextBoxFor(a => a.Mobilenumber, htmlAttributes: new { @class = "form-control", @type = "tel", @placeholder = "Moble Number", @maxlength = "10", @onkeypress = "return Numbervalidation(event, this);" })

                            @Html.ValidationMessageFor(a => a.Mobilenumber)
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @*<input id="login-password" type="text" class="form-control" name="Email" placeholder="Email Address">*@
                            @Html.TextBoxFor(a => a.Email, htmlAttributes: new { @class = "form-control", @type = "email", @placeholder = "Email Address", @maxlength = "50" })

                            @Html.ValidationMessageFor(a => a.Email)
                        </div>
                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->
                            <div class="col-sm-12 controls text-justify col-lg-offset-5">
                                <button id="btn-login" href="#" class="btn btn-success">Submit </button>

                                @* <a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                    You have an account!
                                    <a href="@Url.Action("Login", "Login")">
                                        Login Here
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
}