@using (Html.BeginForm("Login_In", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title text-center">Sign In</div>

                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <form id="loginform" class="form-horizontal" role="form">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">*@
                            @Html.TextBoxFor(a => a.Username, htmlAttributes: new { @class = "form-control", @placeholder = "User Name" })

                            @Html.ValidationMessageFor(a => a.Username)
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(a => a.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(a => a.Password)
                            @if (TempData["LoginError"] != null)
                            {
                                <script type="text/javascript">
                                alert("@Html.Raw(@TempData["LoginError"].ToString())");
                                </script>
                            }

                            @*<input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">*@
                            @*<span class="help-block small">Your strong password</span>*@

                            @*<input id="login-password" type="password" class="form-control" name="password" placeholder="password">*@
                        </div>



                        <div style="margin-top:10px;" class="form-group">
                            <!-- Button -->
                            <div class="col-sm-12 controls text-justify col-lg-offset-5">
                                <button type="submit" id="btn-login" href="#" class="btn btn-success loginbtn">Login Here </button>
                             
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                    Don't have an account!
                                    <a href="@Url.Action("Signup", "Signup")">
                                        Sign Up Here
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
}